<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/good_name_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="商品名称"
                android:textColor="@color/test1"
                android:textSize="30dp" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/orange"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40sp"
                    android:text="单价"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/good_price_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商品价格  "
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nextFocusUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:text="数量"
                    android:textSize="30sp" />

                <Button
                   
                    android:id="@+id/btn_detail_down"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:onClick="detail_downOnclick"
                    android:text="-" />

                <EditText
                    android:id="@+id/detail_num"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1" />

                <Button
                     android:id="@+id/btn_detail_add"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:onClick="detail_addOnclick"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/nextFocusLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/peachpuff"
            android:text="承诺：全国联保 无忧退换货"
            android:textSize="15dp" >
        </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/Button1"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="addshoppingcart"
                android:text="加入购物车" />

            <Button
                android:id="@+id/Button2"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="buynowOnclick"
                android:text="立即购买" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="宝贝评价 "
            android:textSize="30dp" >
        </TextView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/detail_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2号店分店 "
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="描述相符  服务态度好  发货速度快 "
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>