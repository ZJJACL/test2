<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp	"
            android:background="@drawable/twos" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/order_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/nouse_renmingbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="¥"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/check_order_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13323"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nouser_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品单价：¥" />

            <TextView
                android:id="@+id/check_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1323" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nouse_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品数量：" />

            <TextView
                android:id="@+id/check_order_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nouse_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话：" />

            <TextView
                android:id="@+id/check_order_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="133232323" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nouse_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址：" />

            <TextView
                android:id="@+id/check_order_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nouse_wuliu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流状态：" />

            <TextView
                android:id="@+id/check_order_wuliu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未收货" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>