<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    android:background="@drawable/backg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_text_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/money_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:textSize="20sp" />

        <Button
            android:onClick="tixianOnclick"
            android:id="@+id/money_tixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="提现"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/mian_text_chongzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="请输入需要充值的金额："
        android:textSize="15sp" />

    <EditText
        android:id="@+id/money_ed_chongzhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="0.00" />

    <Button
        android:id="@+id/money_chongzhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="chongzhiOnclick"
        android:text="充值" />

</LinearLayout>